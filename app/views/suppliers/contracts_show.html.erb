<%- model_class = Supplier -%>
<div class="page-header">
  <h1 face="微软雅黑" color='#D9B300' size=3>供应商合同</h1>
</div>
<dl class="dl-horizontal">
  <% @supplier.contracts.each_with_index do |x, index|%>
  <p> <%= image_tag(x.url) %></p>
     <%= link_to t('.delete', :default => t("helpers.links.delete")),
              delete_contracts_supplier_path(@supplier, index),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>  
  <% end %> 
</dl>