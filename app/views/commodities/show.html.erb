<%- model_class = Commodity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cno) %>:</strong></dt>
  <dd><%= @commodity.cno %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dms_no) %>:</strong></dt>
  <dd><%= @commodity.dms_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @commodity.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= @commodity.supplier.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_price) %>:</strong></dt>
  <dd><%= @commodity.cost_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sell_price) %>:</strong></dt>
  <dd><%= @commodity.sell_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @commodity.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_on_sell) %>:</strong></dt>
  <dd><%= @commodity.is_on_sell_name %></dd>
  <%= image_tag(@commodity.cover_url, height: '150', width: '150') if @commodity.cover? %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              commodities_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_commodity_path(@commodity), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              commodity_path(@commodity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
