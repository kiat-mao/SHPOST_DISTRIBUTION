<%- model_class = OrderDetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:no) %>:</strong></dt>
  <dd><%= @order_detail.no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @order_detail.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @order_detail.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:commodity_id) %>:</strong></dt>
  <dd><%= @order_detail.commodity.name %></dd>
</dl>

<%= submit_tag "关闭",:id=>'submit_button', onclick: "window.close();" ,:class => 'btn btn-primary'%>